## Build
[build]
dev-mode-dirs = ['src']


## Env: default
[envs.default]
installer = "uv"


## Env: copier
[envs.copier]
detached = true
dependencies = [
  'copier',
  'copier-py-package @ https://github.com/level12/copier-py-package/archive/main.tar.gz',
]

[envs.copier.scripts]
update = 'copier update --answers-file .copier-answers-py.yaml --trust --skip-answered'
update-head = 'update --vcs-ref HEAD'


## Version
[version]
source = 'regex_commit'
path = 'src/{{ py_module }}/version.py'
{% if not hatch_version_tag_sign %}
# https://github.com/frankie567/hatch-regex-commit?#version-source-options
tag_sign = false
{% endif -%}

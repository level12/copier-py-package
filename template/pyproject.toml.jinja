[build-system]
requires = [
    'hatchling',
    'hatch-regex-commit',
]
build-backend = 'hatchling.build'


[project]
name = '{{ project_name }}'
authors = [
    {name = '{{ author_name }}', email = '{{ author_email }}'},
]
requires-python = '>={{ python_version }}'
dynamic = ['version']
readme = 'readme.md'

{% if script_name -%}
[project.scripts]
'{{ script_name }}' = '{{ py_module }}.cli:main'
{% endif -%}

[dependency-groups]
# Note: keeping copier-py-package deps grouped separate from app deps should help avoid unnecessary
# conflicts when upgrading to copier-py-package latest.
dev = [
    # From copier-py-package:
    {include-group = "tests"},
    {include-group = "pre-commit"},
    {include-group = "audit"},
    {include-group = "nox"},
    {include-group = "tasks"},
    'hatch>=1.14.0',
    'ruff>=0.9.6',

    # App specific:
    # TODO: fill in app deps here
]
# Used by nox
tests = [
    # From copier-py-package:
    'pytest>=8.3.4',
    'pytest-cov>=6.0',

    # App specific:
    # TODO: fill in app deps here
]
# Used by nox
pre-commit = [
    # From copier-py-package:
    'pre-commit>=4.1.0',
]
# Used by nox
audit = [
    # From copier-py-package:
    'pip-audit>=2.8.0',
]
# Used by CI
nox = [
    'nox>=2025.2.9',
]
tasks = [
    'click>=8.1.8',
]
